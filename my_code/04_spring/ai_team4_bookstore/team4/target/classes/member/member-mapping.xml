<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member" >
	
<select id="memberlist" resultType="memberdto" >
	select * from members 
</select>

<select id="onemember" resultType="memberdto" parameterType="String" >
    select * from members where id=#{a}
</select>

<select id="login" resultType="memberdto"  parameterType="java.util.Map"  >
			select * from members
			 where id=#{id}
			 and pw=#{pw}			
</select>

<insert id="insertmember" parameterType="memberdto" >
 insert into members(id,pw,name,phone,email,address) values(#{id},#{pw},#{name},#{phone},#{email},#{address}) 
</insert>


<select id="memberDetail" parameterType="String" resultType="memberdto">
	select * from members where id= #{id}
</select>

<update id="updatemember" parameterType="memberdto">
	update members set name=#{name}, phone=#{phone}, email=#{email}, address=#{address} where id=#{id} , pw=#{pw}
</update>

<delete id="deletemember" parameterType="String">
	delete from members where id=#{id}
</delete>
<select id="memberPassword" parameterType="String"	resultType="memberdto">
	select * from members where id=#{id}
</select>
</mapper>