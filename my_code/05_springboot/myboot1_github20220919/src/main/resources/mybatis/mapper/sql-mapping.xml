	<select id="searchMember" resultType="memberDTO" parameterType="memberDTO">
		select * from member where
		<choose>
			<when test="name != null">
				name like concat('%',#{name},'%')
			</when>
			<when test="id!= null">
				id like concat('%',#{id},'%')
			</when>
			<when test="email != null">
				email like concat('%',#{email},'%')
			</when>
			<when test="phone != null">
				phone like concat('%',#{phone},'%')
			</when>
		</choose>
		order by regdate
